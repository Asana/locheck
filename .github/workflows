name: Swift

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: macos-latest
    steps:
      - uses: actions/checkout@v2
      - uses: fwal/setup-swift@v1
    	with:
      	swift-version: "5.4.2"
      - name: Build
        run: swift build
      - name: Run tests
        run: swift test
